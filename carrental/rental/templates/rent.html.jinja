{% extends "basic/base.html.jinja" %}
{% load static %}
{% load i18n %}

{% block content %}
    <div style="width: 70%;" class="mx-auto px-5 p-3 bg-light rounded">
        <h3 class="text-center display-5 fw-bold mt-5">Wypożyczenie</h3>
        <hr>
        <form class="mt-5" action="" method="post">
            {% csrf_token %}
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8 form-group text-muted">
                    {% if order_form.non_field_errors %}
                        <ul class="errorlist">
                            {% for error in order_form.non_field_errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                    {% for field in order_form.visible_fields %}
                        {{ field.label_tag }}
                        {{ field }}
                        <ul class="errorlist">
                            {% if field.errors %}
                                {% for error in field.errors %}
                                    <li>{{ error }}</li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                        {% if register_user_form.errors %}
                            {% if field.help_text %}
                                <ul class="helptext">
                                    <li>{{ field.help_text }}</li>
                                </ul>
                            {% endif %}
                        {% endif %}
                    {% endfor %}

                </div>
            </div>
            <hr class="mt-5">
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-success mt-3 mb-3">Wypożycz</button>
            </div>
        </form>
    </div>
    <ul>
</ul>


{% endblock content %}
